<main id="main-signin">

    <div id="backgroundSignin">
        <svg
        id="10015.io"
        viewBox="0 0 1200 630"
        xmlns="http://www.w3.org/2000/svg"
        ><defs><pattern
            id="svg-pattern"
            x="0"
            y="0"
            width="100"
            height="100"
            patternUnits="userSpaceOnUse"
            patternTransform="translate(5, 5) rotate(0) skewX(0)"
            ><svg width="75" height="75" viewBox="0 0 100 100"><g
                fill="#000000"
                opacity="1"
                ><path d="M100 100H0L100 0V100Z" opacity="0.5" /><path
                    d="M0 100H100L0 0V100Z"
                /></g></svg></pattern></defs><rect
            x="0"
            y="0"
            width="100%"
            height="100%"
            fill="#090909"
        /><rect
            x="0"
            y="0"
            width="100%"
            height="100%"
            fill="url(#svg-pattern)"
        /></svg>
        <div id="logo-signin">
            <div id="logo-img-signin"><img src="./img/negro-logo.png" alt="logo"></div>
        </div>
    </div>
    <form id="signin-form" method="post" action="/signin">
        <h1>Sign In</h1>

        <div id="msg-signin" class="slice-right-hide"><p>Ambos campos son obligatorios</p></div>

        {{#if success_signup}}
            <div id="mensage-registro">
                {{success_signup}}
            </div>
        {{/if}}

        <div class="signin-item">
            <label for="nombre">Usuario</label>
            <input type="text" name="nombre" id="email-input" placeholder="Ej. alias2001">
        </div>

        <div class="signin-item">
            <label for="password">Password</label>
            <input type="password" name="password" id="password-input" placeholder="**********">
        </div>

        <button type="submit" id="btn-signin">Ingresar</button>
    </form>

    <p>¿No tienes una cuenta aún? <a href="/signup">Registrate</a></p>
</main>