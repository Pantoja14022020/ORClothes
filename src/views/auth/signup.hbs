<main id="main-signup">
    <div id="info-errors" class="hide-left">
        <div id="txt-error">
        </div>
    </div>
    <div id="backgroundSignup">
        <svg
        id="10015.io"
        viewBox="0 0 1200 630"
        xmlns="http://www.w3.org/2000/svg"
        ><defs><pattern
            id="svg-pattern"
            x="0"
            y="0"
            width="100"
            height="100"
            patternUnits="userSpaceOnUse"
            patternTransform="translate(5, 5) rotate(0) skewX(0)"
            ><svg width="75" height="75" viewBox="0 0 100 100"><g
                fill="#000000"
                opacity="1"
                ><path d="M100 100H0L100 0V100Z" opacity="0.5" /><path
                    d="M0 100H100L0 0V100Z"
                /></g></svg></pattern></defs><rect
            x="0"
            y="0"
            width="100%"
            height="100%"
            fill="#090909"
        /><rect
            x="0"
            y="0"
            width="100%"
            height="100%"
            fill="url(#svg-pattern)"
        /></svg>
        <div id="nav-info">
            <a href="/signin" id="back-signin"><i class="fa-solid fa-arrow-right-long fa-rotate-180"></i> </a>
            <h1>Sign Up</h1>
        </div>
    </div>
    <form id="signup-form" action="/signup" method="post" enctype="multipart/form-data">

        <div class="signup-item">
            <label for="nombre">Eligen un nombre de usuario</label>
            <input type="text" name="nombre" placeholder="Ej. alias23" id="nombre">
        </div>

        <div class="signup-item">
            <label for="password">Password</label>
            <input type="password" name="password" placeholder="**********" id="password">
        </div>

        <div class="signup-item">
            <label for="pais">Pais</label>
            <select name="pais" id="pais-select">
                <option value="+521" selected>México</option>
            </select>
        </div>

        <div class="signup-item">
            <label for="telefono">Télefono</label>
            <input name="telefono" type="number" placeholder="7721257773" id="telefono">
        </div>

        <div class="signup-item">
            <label for="correo">Correo</label>
            <input name="correo" type="email" placeholder="tuejemplo@gmail.com" id="correo">
        </div>
        
        <div class="signup-item add-image-profile">
            <label for="image">Selecciona foto de perfil</label>
            <div id="behind-btn"><input type="file" name="image" id="add-image-profile"><i class="fa-solid fa-image"></i></div>
        </div>

        <button type="submit" id="btn-registrar" class="hide">Registrar</button>
    </form>
    <div id="info-footer-signup">
        <p>¿Ya estas registrado? <a href="/signin">Sign In</a></p>
    </div>
</main>